@model IEnumerable<WebApp.Data.ApplicationUser>
@{
    ViewBag.Title = "Список пользователей";
}

    <table class="table">
        <tr><th>Login</th><th>Email</th><th>Registration Date</th><th></th></tr>
        @foreach (var user in Model)
        {
            <tr>
                <td>
                    <form method="get" action="BlockUser">
                        <input checked="@(ViewBag.CheckStatus == true ? "checked" : null)" type="checkbox" name="BlockCheck" />
                    </form>
                </td>
                <td>@user.Login</td>
                <td>@user.Email</td>
                <td>@user.RegistrationDate</td>
                <td>
                    <form asp-action="Delete" asp-route-id="@user.Id" method="post">
                        <button type="submit" class="btn btn-sm btn-danger">
                            Удалить
                        </button>
                    </form>
                </td>
            </tr>
        }
        <tr>
            <td>
        <form asp-action="Block" method="post">          
            <button type="submit" class="btn btn-sm btn-danger">
                Block
            </button>
        </form>
                </td>
        </tr>
    </table>